var capital = menu.options[menu.selectedIndex].value;
document.getElementById("cou").innerHTML = "You have Selected :
"+country;
document.getElementById("cap").innerHTML = "It's Capital is : "+capital;
}
</script>
</head>
<body>
 <center>
 <h1 style="color:blue;">Select any Country, it will display capital of the
Country</h1>
