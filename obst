#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n,p[10],q[10],w[10][10],c[10][10],min1,min;
    scanf("%d",&n);
    for(int i=1; i<=n;i++){
        scanf("%d",&p[i]);
    }
    
    for(int i=0; i<=n;i++){
        scanf("%d",&q[i]);
    }
    for(int i=0;i<=n;i++){
        for(int j=0;j<=n;j++){
            if (i==j){
                w[i][j] = q[i];
                c[i][j]=0;
            }
        }
    }
    for(int k=0;k<n;k++){
        for(int i=0,j=k+1;j<n+1 && i<n+1;j++,i++){
            if(i!=j &&i<j){
                w[i][j] = p[j]+q[j]+w[i][j-1];
                min=9999;
                for(int x = i+1;x<=j;x++){
                    min1 = c[i][x-1]+c[x][j]+w[i][j];
                    if(min>min1){
                        min=min1;
                    }
                }
                c[i][j]=min;
            }
        }
    }
    printf("%d",c[0][n]);

    return 0;
}
